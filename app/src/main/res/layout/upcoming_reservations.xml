<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".upcomingReservations">

    <ImageView
        android:id="@+id/upcomingBackground"
        android:layout_width="411dp"
        android:layout_height="84dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rectangle_2001_shape" />

    <TextView
        android:id="@+id/UPCOMING"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="UPCOMING RESERVATIONS"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintVertical_bias="0.0"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="70dp"
        />

    <ImageView
        android:id="@+id/res_bottom_bar"
        android:layout_width="411dp"
        android:layout_height="55dp"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/rectangle_2000_shape"
        android:layout_gravity="bottom"/>

    <ImageView
        android:id="@+id/res_upcoming"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        app:srcCompat="@drawable/calend"
        android:layout_gravity="bottom"
        android:layout_marginBottom="13dp"/>

    <ImageView
        android:id="@+id/res_profile"
        android:layout_width="34dp"
        android:layout_height="29dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/unio"
        android:layout_gravity="bottom"
        android:layout_marginStart="330dp"
        android:layout_marginLeft="330dp" />

    <ImageView
        android:id="@+id/res_circle"
        android:layout_width="73dp"
        android:layout_height="69dp"
        android:layout_marginStart="170dp"
        android:layout_marginLeft="170dp"
        android:layout_marginBottom="25dp"
        android:layout_gravity="bottom"
        app:srcCompat="@drawable/cilcle_shape" />

    <ImageView
        android:id="@+id/res_shadow"
        android:layout_width="38dp"
        android:layout_height="45dp"
        android:layout_marginStart="187dp"
        android:layout_marginLeft="187dp"
        android:layout_marginBottom="37dp"
        android:layout_gravity="bottom"
        app:srcCompat="@drawable/searc"/>

    <ImageView
        android:id="@+id/res_search"
        android:layout_width="36dp"
        android:layout_height="38dp"
        android:layout_marginStart="187dp"
        android:layout_marginLeft="187dp"
        android:layout_marginBottom="44dp"
        android:layout_gravity="bottom"
        app:srcCompat="@drawable/search1"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>